  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/robinlarondelle/serious-game-server/issues"
  },
  "homepage": "https://github.com/robinlarondelle/serious-game-server#readme",
  "dependencies": {
    "@apidevtools/swagger-parser": "^9.0.1",
    "body-parser": "^1.19.0",
    "concurrent": "^0.3.2",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "json-refs": "^3.0.15",
    "moment": "^2.26.0",
    "mongoose": "^5.9.16",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "swagger-ui-watcher": "^2.1.6",
    "yaml": "^1.10.0"
